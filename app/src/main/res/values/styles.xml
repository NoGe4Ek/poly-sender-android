    <style name="Theme.HiNote.TextView.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/comfortaa_regular</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="Theme.HiNote.TextView.Extra" parent="TextAppearance.Material3.LabelSmall">
